{
  "name": "@ace-ielts/extension",
  "displayName": "AceIELTS - Ace Your IELTS",
  "version": "0.1.0",
  "private": true,
  "description": "Chrome extension for IELTS exam preparation",
  "author": "AceIELTS Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf build .plasmo"
  },
  "dependencies": {
    "@ace-ielts/core": "workspace:*",
    "@ace-ielts/ui": "workspace:*",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.12.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.460.0",
    "plasmo": "^0.90.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.278",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "storage"
    ]
  }
}
